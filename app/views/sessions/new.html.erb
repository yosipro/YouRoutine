<div class="text-center">
  <h4>ログイン</h4>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <i class="far fa-envelope"></i> <%= f.label :mail, 'メールアドレス' %>
        <%= f.email_field :mail, class: 'form-control' %>
      </div>

      <div class="form-group">
        <i class="fas fa-key"></i> <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block mt-5' %>
    <% end %>

    <p class="text-center mt-5">会員登録がお済みでない方は <%= link_to 'こちら', signup_path %></p>
  </div>
</div>