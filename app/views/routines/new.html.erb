<%= form_with(model: @routine , local: true) do |f| %>
 <%= render 'layouts/error_messages', model: f.object %>

<div class="d-flex flex-column align-items-center">
  <%= f.label :title, 'ルーティンのタイトル' %>
  <%= f.text_field :title %>
</div>
  
  <div class="d-flex flex-column align-items-center mt-4">
   <%= f.label :time, 'ルーティンにかかる時間（半角数字）' %>
   <p>約 <%= f.text_field :time %> 分</p>
 </div>
 
  <div class="form-group d-flex flex-column align-items-center mt-4">
   <p>イメージ画像をアップロード!</p>
    <% if @routine.image? %>                                                              
    <%= image_tag @routine.image.url %>
    <% end %>

    <%= f.file_field :image , class: 'mt-4'%>
    <%= f.hidden_field :image_cache %>
  </div>
  
   <div class="form-group d-flex justify-content-center mt-5">
    <div>
  <%= f.radio_button :status, "0" %>
  <%= f.label :public, "このルーティンを公開する！", {value: 0, style: "display: inline-block;"} %>
    </div>
    <div>
  <%= f.radio_button :status, "1", class: 'ml-1' %>
  <%= f.label :private, "このルーティンを非公開にする", {value: 1, style: "display: inline-block;"} %>
    </div>
  </div>
  
  <div class="d-flex justify-content-center mt-3">
  <%= f.submit '保存して、動画を選択する！' %>
  </div
<% end %>
