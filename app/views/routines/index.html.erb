<% if logged_in? %>

  <div>
    <h4 class="mb-5 text-body">作成済みのルーティン</h4>
   
     <div class="row">
      <% @routines.each do |routine| %>
      <div class="col-3 mb-5">
          <div class="d-flex flex-column justify-content-between align-items-start w-75 mx-auto">
                  <% if routine.image? %>   
            <div class="mx-auto"><%= image_tag routine.image.url ,class: "border border-dark" %></div>
                  <% end %>
            <p class="h6 mt-2"><%= routine.title %></p>
            <div class="d-flex justify-content-around w-100 align-items-center align-self-end">
                  <p class="text-secondary h6 mb-0"><%= routine.time %>分</p>
                <% if routine.status == 0 %>
                  <p class="text-secondary h6 mb-0">公開</p>
                <% else %>
                  <p class="text-secondary h6 mb-0">非公開</p>
                <% end %>
              
              <%= link_to "実行する", routine_path(routine), class: "btn btn-primary btn-sm w-50" %>
              
            </div>
          </div>
      </div>
      <% end %>
     </div>
      <div class="d-flex justify-content-end">  
      <%= link_to "新しいルーティンを作成する！", new_routine_path, class: "btn btn-success" %>
      </div>
  </div>
<hr class="mt-5">

  <div>
    <h4 class="mb-5 text-body">取得済みのルーティン</h4>
   
     <div class="row">
      <% @obtainings.each do |obtain| %>
        <div class="col-3 mb-5">
          <div class="d-flex flex-column justify-content-between align-items-start w-75 mx-auto">
                  <% if obtain.image? %>   
            <div class="mx-auto"><%= image_tag obtain.image.url ,class: "border border-dark" %></div>
                  <% end %>
            <p class="h6 mt-2"><%= obtain.title %></p>
            <div class="d-flex justify-content-around w-100 align-items-center align-self-end">
                  <p class="text-secondary h6 mb-0"><%= obtain.time %>分</p>
                <% if obtain.status == 0 %>
                  <p class="text-secondary h6 mb-0">公開</p>
                <% else %>
                  <p class="text-secondary h6 mb-0">非公開</p>
                <% end %>
              
              <%= link_to "実行する", routine_path(obtain), class: "btn btn-primary btn-sm w-50" %>
              
            </div>
          </div>
      </div>
      <% end %>
     </div>
      <div class="d-flex justify-content-end">  
      <%= link_to "新しくルーティンを取得する！", new_routine_path, class: "btn btn-success" %>
      </div>
  </div>


<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>YouRoutine</h1>
      <%= link_to '会員登録はこちら！', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>