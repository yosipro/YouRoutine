  <% if current_user.possessing?(video) %>
    <%= form_with(model: current_user.takeins.find_by(video_id: video.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :video_id, video.id %>
      <%= f.submit 'お気に入りから削除する', class: 'btn btn-danger btn-block' %>
    <% end %>
 <% else %>
    <%= form_with(model: current_user.takeins.build, local: true) do |f| %>
      <%= hidden_field_tag :video_id, video.id %>
      <%= f.submit 'お気に入りに追加する！', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>