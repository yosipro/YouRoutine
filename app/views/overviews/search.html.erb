<div class="d-flex justify-content-center">
    <p class="text-monospace h5"><i class="far fa-clock"></i> みんなのルーティン</p>
</div>
<%= form_with local: true, url: search_overviews_path, method: :get do |f| %>
  <div class="text-center mt-5">
    <div class="form-group">
  <%= f.radio_button :search, "0" %>
  <%= f.label :time_0, "5分以内", {value: 0, style: "display: inline-block;"} %>
  <%= f.radio_button :search, "1", class: 'ml-2' %>
  <%= f.label :time_1, "10分以内", {value: 1, style: "display: inline-block;"} %>
  <%= f.radio_button :search, "2", class: 'ml-2' %>
  <%= f.label :time_2, "15分以内", {value: 1, style: "display: inline-block;"} %>
  <%= f.radio_button :search, "3", class: 'ml-2' %>
  <%= f.label :time_3, "それ以上", {value: 1, style: "display: inline-block;"} %>

    <%= f.submit '検索', class: 'ml-2 btn btn-secondary'%>
    </div>
  </div>
<% end %>
<% @routines.each do |routine| %>
    <% if routine.status == 0 %>
        
        <div class="d-flex flex-column align-items-center mt-5">
        <% if routine.image? %>
        <div class="mb-1" style="width: 250px;"><%= image_tag routine.image.url, class: "border border-dark" %><p class="mb-1 text-center text-wrap pt-2"><%= routine.title %></p></div>
        <% end %>
        
          <div class="d-flex justify-content-center">
            <div class="d-flex flex-column align-items-start">
                <div class="row">
                    <p class="mb-0"><%= routine.time %>分</p>
                    <p class="mb-0 ml-2">公開</p>
                    <p class="mb-0 ml-2"> <%= routine.created_at.strftime('%Y/%m/%d') %></p>
                </div>
                <% true_user = routine.user %>
                <p class="mb-0">作成者:<%= link_to true_user.name, user_path(true_user), class: 'ml-1' %></p>
            </div>
           <%= link_to "詳細", routine_path(routine) , class: 'btn btn-primary ml-5 pt-2'%>
           </div>
        </div>
        
        <% end %>
    <% end %>
